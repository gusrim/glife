				act 'Secure affinity':
					cla
					tobiQW = 3
					stihia = srodrand
					srodstvo = 0
					gt 'kakuzu', 'mansion1'
				end

				act 'Unsubscribe from this affinity':
					srodstvo = 0
					gt 'kakuzu', 'mansion1'
				end
			end
		end
	end

