	gs 'stat'
	if train_dest = 4 and train_event = 0 and rand(1, 100) < 20: gt 'train', 'events'
	if train_dest < 4 and train_event = 0 and rand(1, 100) <= 10: gt 'train_incidental', 'events'
!!image needs to be random 1-3
	'<center><img src="images/locations/shared/train/gadplat.jpg" ></center>'
	'After 10 more minutes, the train stops at another station. The village of Gadyukino is not far from here.'
	act 'Get off the train at this station':
		$metka = 'village'
		if train_event = 0 and rand(1, 100) <= 5: gt 'train_incidental', 'end'
		gt 'train', 'village'
	end
	if train_dest < 4:
		act 'Continue your journey':
			gt 'train', 'villageN'
		end
	end
end

