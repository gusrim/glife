    if foresteventrand = 3 and foresteventday ! daystart: gt 'gadforest_event', 'mushroom'
    if foresteventrand = 4 and hour > 8 and hour < 20 and foresteventday ! daystart:gt 'gadforest_event', 'forest_hanters'    
    
