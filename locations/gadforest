    !the chance to get lost
    foresteventrand = rand(1,10)
    new_boletus = 0
    new_bilberry = 0     

    '<center><H4>Thicket</H4></center>'

    if month >= 4 and month <= 10:
	    if hour >= 6 and hour < 22:
		    '<center><img src="images/qwest/gadukino/forest/gadforest3.jpg"></center>'
