		if goforest >= lostrand  and goswamp = 0:minut += 30 & gt 'gadforestswamp','1' 
		if goforest < lostrand:gt 'gadforest', 'gadforestloststart'     		    
    end    
	if rand(1,10)> 7: gs 'gadforest', 'torncloth'
end             

