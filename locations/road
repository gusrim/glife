				'The man grins from ear to ear, and says: "You know what, girl? I was kinda hoping you''d say that. Get in."'
				act'Get in the car':gt 'road', 'drive_sex1'
			end
		end
	end
end

if $ARGS[0] = 'autostop_d':
	cls
	gs'stat'
	truck_drive = 0
    bandit_drive = 0
    drive_sex[1] = 0
    drive_sex[2] = 0
