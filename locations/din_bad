	if pain_timer > totminut - 242 and painkiller > 0:pl 'You could take a <a href="exec:pain[''killer''] = 1 & painkiller -= 1 & pain_timer = totminut & dynamic $d_bag">painkiller</a>. Painkillers left <<painkiller>>.'
	if kosmetitka > 0 and pcs_makeup = 1:pl 'You have portable makeup bag. Cometic applications left <<kosmetitka>>. <a href="exec:dynamic $d_kosmetitka"><b>Put on makeup</b></a>'
