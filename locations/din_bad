    end
    if steroid_have > 0:
        pl'<a href="exec:dynamic $use_steroids & dynamic $d_bag"><b>Take steroids.</b></a> Uses left: <<steroid_have>>.'
    end
    if bcream_have > 0:
        pl'<a href="exec:dynamic $use_bcream & dynamic $d_bag"><b>Apply breast cream.</b></a> Uses left: <<bcream_have>>.'
    end
    if aphrodisiac_have > 0:
