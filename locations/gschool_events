	r = rand(0,ARRSIZE('grupTipe'))
	if teacher_counter = 50:
		$rand_teacher = 'Tsarev'
		killvar 'teacher_counter'
	elseif grupTipe[r] ! 6 or npcPol[r] = 1:
		jump 'rnd_teacher_loop'
	end
	$rand_teacher = $npcSurName[r]
end

--- gschool_events ---------------------------------

