		Sweet_talk = 5
	elseif pcs_grades >= 70:
		Sweet_talk = 0
	elseif pcs_grades >= 60:
		Sweet_talk = -5
	elseif pcs_grades >= 60:
		Sweet_talk = -10
	else
		Sweet_talk = -20
	end
	if grupTipe = 3: Sweet_talk += 10
	if grupTipe = 2: Sweet_talk += 10
	if grupTipe = 1: Sweet_talk += 5
	if grupTipe = 4: Sweet_talk -= 10
	Sweet_talk += (hotcat - 5) * 5
end

