end

if $ARGS[0] = 'washFace':
	cla
	*clr
	'<center><img src="images/etogame/facesp.jpg"></center>'
	'You carefully washed.'
	if cumlip > 0 or cumface > 0:
		act 'Wash the cum off your face':
			cla
			*clr
			cumlip = 0
			cumface = 0
			if sweat > 19 : = sweat - 5
			minut = minut + 15

			'<center><img src="images/etogame/facesp.jpg"></center>'
			'You carefully washed sperm from the face.'

			act 'Move away':gt 'sbReksHome','party_toilet'
		end
	end

	act 'Move away':gt 'sbReksHome','party_toilet'
end

