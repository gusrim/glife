		grupvalue[2] -= 20
		grupvalue[3] -= 20
		grupvalue[4] -= 20
		grupTipe = 1
		gs 'gschool_socialchg', 'group_rel_change','cool kids', 5
		gs 'stat'

		act 'Go to morning class': school_period = 0 & gt 'gschool_lessons', 'schedule'
	end
