	if (pcs_health * 5) >= healthmax: pcs_health = pcs_health * 20 / 100
	if (pcs_mood * 5) >= 100: pcs_mood = pcs_mood * 20 / 100
elseif pain['total'] > 60:
	if (pcs_health * 5 / 2) >= healthmax: pcs_health = pcs_health * 40 / 100
