pain['relief'] = 0

if alko > 6:
	pain['relief'] = 50
elseif alko > 3:
	pain['relief'] = 20
end

if StrongNarkota > 0:
	pain['relief'] = 90
elseif nark > 0:
	pain['relief'] = 60
elseif pain['killer'] > 12:
	pain['relief'] = 50
end

if pain['relief'] ! 0:
	if (pain['total'] / pain['relief']) > 0:
		pain['total'] = pain['total'] / pain['relief']
	elseif pain['total'] > 0:
		pain['total'] = 0
	end
end

