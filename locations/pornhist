		end
	end
	
	if pfactor > 2:
		if $pfilmtags <> '':
			$pfilmtags+=', gangbang'
		else
			$pfilmtags='gangbang'
		end
	elseif pfactor = 2:
		if $pfilmtags <> '':
			$pfilmtags+=', threesome'
		else
