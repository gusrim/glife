$porntag = {
	if pornfilmAppAge[i] < 20: 
		$pfilmtags = 'teen'
	elseif pornfilmAppAge[i] >= 40:
		$pfilmtags = 'mature'
	end
	
	if pornfilmpreg[i] = 1:
		if $pfilmtags <> '':
			$pfilmtags+=', pregnant'
		else
