# talent_agency

if $ARGS[0] = 'start':
	cls
	minut += 5
	gs 'stat'
	if night_mode = 1:
		fcolor = rgb(255, 255, 255)
		bcolor = rgb(0, 0, 0)
		lcolor = rgb(106, 90, 205)
	else
		fcolor = rgb(0, 0, 0)
		bcolor = rgb(255, 255, 255)
		lcolor = rgb(106, 90, 205)
	end
	'<center><b><font color="maroon">Aurora Talent Agency</font></b></center>'
	'<center><img src="images/locations/city/citycenter/aurora/front.jpg"></center>'
	'"Hello, welcome to the Aurora Female Talent Agency! How may I help you?"'
	if casting = 3 and hour <= 11 and SMTV_commercial = daystart:
		'"Oh? Are you here for the SMTV commercial? Please go to interview room 3, they''re waiting for you inside.'
		room = 3
	elseif casting = 3 and (hour > 11 and SMTV_commercial = daystart) or SMTV_commercial < daystart:
		'"You''re here for the SMTV commercial? Sorry, you''re late and you''ve just cost the production tons of money. You''ve been fired. First rule of showbiz honey: show up on time.'
		casting = 0
	end
	act 'Leave':gt'down'
	!!act 'Ask about auditions':
	act 'Go to the interview rooms':gt'talent_agency', 'hallway'
end

if $ARGS[0] = 'hallway':
	*clr
	cla
	'<center><img src="images/locations/city/citycenter/aurora/interview/hallway.jpg"></center>'
	act 'Leave':gt 'talent_agency','start'
	act 'Room 1':gt 'talent_agency','room1'
	act 'Room 2':gt 'talent_agency','room2'
	act 'Room 3':gt 'talent_agency','room3'
	act 'Room 4':gt 'talent_agency','room4'
	act 'Room 5':gt 'talent_agency','room5'
end

if $ARGS[0] = 'room1':
	*clr
	cla
	if room ! 1: gt'talent_agency','wrong_room'
end

if $ARGS[0] = 'room2':
	*clr
	cla
	if room ! 2:gt'talent_agency','wrong_room'
end

if $ARGS[0] = 'room3':
	*clr
	cla
	if room ! 3: gt'talent_agency','wrong_room'
	if casting = 3: gt'talent_agency','SMTV'
end

if $ARGS[0] = 'room4':
	*clr
	cla
	if room ! 4:gt'talent_agency','wrong_room'
end

if $ARGS[0] = 'room5':
	*clr
	cla
	if room ! 5:gt'talent_agency','wrong_room'
end

if $ARGS[0] = 'end':
	money += actpayfin
	gt 'talent_agency','start'
end


